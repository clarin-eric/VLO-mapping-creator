<configuration>

  <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
    <target>System.err</target>
    <encoder>
      <pattern>%d [%.4thread] %-5level %logger{36} : %msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="eu.clarin.vlo.mapping" level="INFO"/>
  
  <root level="OFF">
    <appender-ref ref="STDERR" />
  </root>

</configuration>
